@using ContactControl.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Criação de Usuário";
}
<h1 class="display-4">Criar usuário</h1>
<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="mb-3 form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o seu nome">
        @Html.ValidationMessageFor(x=>x.Nome)
    </div>
    <div class="mb-3 form-group">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
        @Html.ValidationMessageFor(x=>x.Login)
    </div>
    <div class="mb-3 form-group">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <div class="mb-3 form-group">
        <label for="login" class="form-label">Perfil</label>
		<select class="form-control" asp-for="Perfil">
			<option value="0">Selecione</option>
			<option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x=>x.Perfil)
    </div>
    <div class="mb-3 form-group">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
        @Html.ValidationMessageFor(x=>x.Senha)
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>