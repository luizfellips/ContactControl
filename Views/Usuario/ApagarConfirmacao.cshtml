@model UsuarioModel
@{
	ViewData["Title"] = "Confirmação";
}
<div class="text-center">
	<h2>Realmente deseja apagar o usuário @Model.Login?</h2>
</div>
<a class="btn btn-primary d-block my-2" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger d-block my-2" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar exclusão</a>